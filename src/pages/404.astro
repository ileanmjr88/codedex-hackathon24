---
import MainLayout from "../layout/MainLayout.astro";
import Button from "../components/Button";
import { Image } from 'astro:assets';
import underconstructionImg from '../../public/4996imgunderconstruction.gif';
---

<MainLayout title="Page Not Found">
    <div class="flex items-center justify-center snap-center">
        <div class="text-center">
            <Image 
                src={underconstructionImg}
                alt="404"
                width={400}
                height={400}
                class="w-1/2 mx-auto"
            />
            <h1 class="text-6xl font-bold mb-4">404</h1>
            <p class="text-2xl mb-8">Oops! The page you are looking for does not exist.</p>
            <a href="/" class="text-blue-500 hover:underline">Go back to the homepage</a>
        </div>
    </div>
</MainLayout>