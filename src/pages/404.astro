---
import MainLayout from "../layout/MainLayout.astro";
import Button from "../components/Button";
import { Image } from 'astro:assets';
import underconstructionImg from '/public/ininterlinksyouthunder_constructionA.gif';

---

<MainLayout title="Page Not Found">
    <div class="flex items-center justify-center snap-center py-24">
        <div class="text-center">
            <Image 
                src={underconstructionImg}
                alt="404"
                width={400}
                height={400}
                class="w-1/2 mx-auto"
            />
            <p class="text-2xl mb-8 py-4">Oops! The page you are looking for does not exist.</p>
            <a href="/" >
                <Button text="Go back to homepage" onClick={() => window.location.href = '/'}/> 
            </a>
            <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">
                <Button text="Click if you dare!" onClick={() => window.location.href = 'https://www.youtube.com/watch?v=dQw4w9WgXcQ'}/>
            </a>
        </div>
    </div>
</MainLayout>